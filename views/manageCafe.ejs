<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Kelola Cafe - Dashboard</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --primary: #0d6efd;
      --primary-light: #e8f2ff;
      --secondary: #6c757d;
      --dark: #212529;
      --light: #f8f9fa;
      --border: #e9ecef;
      --shadow: 0 4px 12px rgba(0,0,0,0.08);
      --shadow-hover: 0 8px 24px rgba(0,0,0,0.12);
    }
    
    * {
      font-family: 'Poppins', sans-serif;
    }
    
    body {
      background-color: #f8fafc;
      color: var(--dark);
      padding-bottom: 80px;
    }
    
    .dashboard-header {
      background: white;
      border-radius: 20px;
      padding: 1.5rem;
      box-shadow: var(--shadow);
      margin-bottom: 2rem;
    }
    
    .page-title {
      font-weight: 700;
      color: var(--primary);
      margin-bottom: 0.5rem;
    }
    
    .card-custom {
      border-radius: 16px;
      transition: all 0.3s ease;
      overflow: hidden;
      border: 1px solid var(--border);
      background: white;
      height: 100%;
    }
    
    .card-custom:hover {
      transform: translateY(-6px);
      box-shadow: var(--shadow-hover);
    }
    
    .card-img-top {
      height: 220px;
      object-fit: cover;
    }
    
    .action-buttons {
      display: flex;
      gap: 8px;
      margin-top: 1rem;
    }
    
    .btn {
      border-radius: 12px;
      padding: 8px 16px;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    
    .btn-primary {
      background-color: var(--primary);
      border-color: var(--primary);
    }
    
    .btn-primary:hover {
      background-color: #0b5ed7;
      border-color: #0a58ca;
      transform: translateY(-2px);
    }
    
    .modal-content {
      border-radius: 20px;
      border: none;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }
    
    .modal-header {
      border-bottom: 1px solid var(--border);
      padding: 1.5rem;
    }
    
    .modal-body {
      padding: 1.5rem;
    }
    
    .modal-footer {
      border-top: 1px solid var(--border);
      padding: 1.5rem;
    }
    
    .form-control, .form-select {
      border-radius: 12px;
      padding: 12px 16px;
      border: 1px solid var(--border);
      transition: all 0.3s ease;
    }
    
    .form-control:focus, .form-select:focus {
      box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
      border-color: var(--primary);
    }
    
    .preview-img {
      width: 100%;
      height: 200px;
      border-radius: 12px;
      object-fit: cover;
      margin-top: 12px;
      display: none;
    }
    
    .empty-state {
      text-align: center;
      padding: 3rem 1rem;
      color: var(--secondary);
    }
    
    .empty-state i {
      font-size: 3rem;
      color: var(--border);
      margin-bottom: 1rem;
    }
    
    @media (max-width: 768px) {
      .dashboard-header {
        padding: 1rem;
      }
      
      .action-buttons {
        flex-direction: column;
      }
      
      .btn {
        width: 100%;
      }
    }
  </style>
</head>

<body>
<%- include("partials/taskbarDashboard") %>

<div class="container py-4">
  <div class="dashboard-header">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="page-title">Kelola Data Cafe</h1>
        <p class="text-muted mb-0">Kelola cafe dan tempat nongkrong yang tersedia di platform</p>
      </div>
      <div class="col-auto">
        <button class="btn btn-primary px-4 py-2 fw-semibold" data-bs-toggle="modal" data-bs-target="#tambahModal">
          <i class="bi bi-plus-circle pe-2"></i> Tambah Cafe
        </button>
      </div>
    </div>
  </div>

  <% if (cafe.length === 0) { %>
    <div class="empty-state">
      <i class="bi bi-cup-hot"></i>
      <h4>Belum ada data cafe</h4>
      <p>Mulai dengan menambahkan cafe pertama Anda</p>
      <button class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#tambahModal">
        Tambah Cafe Pertama
      </button>
    </div>
  <% } else { %>
    <div class="row g-4">
      <% cafe.forEach(item => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card card-custom shadow-sm h-100">
            <img src="<%= item.foto %>" class="card-img-top" alt="<%= item.nama %>">
            <div class="card-body">
              <h5 class="card-title fw-bold"><%= item.nama %></h5>
              <p class="card-text text-muted"><%= item.deskripsi.substring(0, 80) %>...</p>
              
              <div class="d-flex align-items-center text-secondary">
                <i class="bi bi-geo-alt me-2"></i>
                <small><%= item.alamat %></small>
              </div>

              <div class="action-buttons">
                <button class="btn btn-warning btn-sm flex-fill" data-bs-toggle="modal" data-bs-target="#editModal-<%= item._id %>">
                  <i class="bi bi-pencil-square"></i> Edit
                </button>
                
                <form action="/dashboard/managecafe/delete/<%= item._id %>" method="GET" class="flex-fill">
                  <button class="btn btn-danger btn-sm w-100" onclick="return confirm('Yakin hapus data ini?')">
                    <i class="bi bi-trash"></i> Hapus
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal Edit -->
        <div class="modal fade" id="editModal-<%= item._id %>" tabindex="-1">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Edit Data Cafe</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>

              <form action="/dashboard/managecafe/edit/<%= item._id %>" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                  <div class="mb-3">
                    <label class="form-label fw-semibold">Nama Cafe</label>
                    <input type="text" class="form-control" name="nama" value="<%= item.nama %>" placeholder="Masukkan nama cafe" required>
                  </div>

                  <div class="mb-3">
                    <label class="form-label fw-semibold">Deskripsi</label>
                    <textarea class="form-control" name="deskripsi" rows="3" placeholder="Tuliskan deskripsi tentang cafe ini" required><%= item.deskripsi %></textarea>
                  </div>

                  <div class="mb-3">
                    <label class="form-label fw-semibold">Alamat Lengkap</label>
                    <input type="text" class="form-control" name="alamat" value="<%= item.alamat %>" placeholder="Masukkan alamat lengkap" required>
                  </div>

                  <div class="mb-3">
                    <label class="form-label fw-semibold">Foto Baru (opsional)</label>
                    <input type="file" class="form-control" name="foto" accept="image/*" onchange="previewEdit(event, '<%= item._id %>')">
                    <small class="text-muted">Kosongkan jika tidak ingin mengubah foto</small>
                    <img id="previewEdit-<%= item._id %>" class="preview-img">
                  </div>
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                  <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<!-- Modal Tambah -->
<div class="modal fade" id="tambahModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Tambah Cafe Baru</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <form action="/dashboard/managecafe/add" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label fw-semibold">Nama Cafe</label>
            <input type="text" class="form-control" name="nama" placeholder="Masukkan nama cafe" required>
          </div>

          <div class="mb-3">
            <label class="form-label fw-semibold">Deskripsi</label>
            <textarea class="form-control" name="deskripsi" rows="3" placeholder="Tuliskan deskripsi tentang cafe ini" required></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label fw-semibold">Alamat Lengkap</label>
            <input type="text" class="form-control" name="alamat" placeholder="Masukkan alamat lengkap" required>
          </div>

          <div class="mb-3">
            <label class="form-label fw-semibold">Foto</label>
            <input type="file" class="form-control" name="foto" accept="image/*" onchange="previewAdd(event)" required>
            <img id="previewAdd" class="preview-img">
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-primary">Tambah Cafe</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
  function previewEdit(e, id) {
    const file = e.target.files[0];
    const img = document.getElementById("previewEdit-" + id);
    if (file) {
      img.src = URL.createObjectURL(file);
      img.style.display = "block";
    }
  }
  
  function previewAdd(e) {
    const file = e.target.files[0];
    const img = document.getElementById("previewAdd");
    if (file) {
      img.src = URL.createObjectURL(file);
      img.style.display = "block";
    }
  }
  
  // Active state for navigation
  document.addEventListener('DOMContentLoaded', function() {
    const currentPage = window.location.pathname;
    const taskItems = document.querySelectorAll('.task-item');
    
    taskItems.forEach(item => {
      if (item.getAttribute('href').includes('/dashboard/managecafe')) {
        item.classList.add('active');
      }
    });
  });
</script>
</body>
</html>